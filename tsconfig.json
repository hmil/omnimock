{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "src",
        "declaration": true,
        "noImplicitAny": true,
        "strict": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": false,
        "importHelpers": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "lib": [
            "es2015",
            "esnext.asynciterable"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
